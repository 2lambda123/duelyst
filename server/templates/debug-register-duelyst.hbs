{{> header}}
<body>
<div class="container">

    <div class="row" style="margin-top: 50px; margin-left: -20px">
    {{> logo_svg}}
    </div>

    <div class="row" style="margin-top: 10px; min-height: 125px;">
      <h3>Create DUELYST User</h3>
      <strong><p style="color: red; ">{{error}}</p></strong>
    </div>

    <div class="row" style="margin-top: 25px;">
      <form role="form" action="/debug-duelyst-register" method="POST" autocomplete="off">
        <div class="form-group">
          <label for="email">Email Address</label>
          <input type="email" class="form-control" name="email" id="email" required="required" placeholder="Enter email">
          <label for="username">Username</label>
          <input type="username" class="form-control" name="username" id="username" required="required" placeholder="Enter username">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" id="password" required="required" placeholder="Enter password">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>

</div>
</body>
</html>